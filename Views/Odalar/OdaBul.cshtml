
@{
    ViewBag.Title = "Oda Bul";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using OtelArama.Models

@model List<Odalar>
   




<br />
<br />
<br />
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">

                </div>
                <div class="block-controls">

                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Odalar/OdaEkle" class="btn btn-success rounded">Oda Ekle </a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Otel Adı</th>
                                <th>Oda Tipi</th>
                                <th>Oda kat</th>
                                <th>Oda numarası</th>
                                <th>Oda durumu</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>


                            @foreach (Odalar o in Model)
                            {

                                <tr>
                                    @*<td><img src="@o.image" alt="otelresim" style="max-width:200px"></td>*@

                                    <td><span class="label label-primary">@o.Oteller.otel_adi</span></td>
                                    <td>@o.OdaTipi</td>

                                    <td>@o.oda_kat</td>
                                    <td>@o.oda_numara</td>
                                    <td>@o.odadurumu</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


