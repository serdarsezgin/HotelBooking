
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using OtelArama.Models

@model List<Oteller>




<br />
<br />
<br />
<div class="row">
    <div class="col-md-12 ">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">

                </div>
               

                @if (User.IsInRole("A"))
                {
                    <div class="block-controls">


                        <a href="/Oteller/OtelEkle" class="btn btn-success rounded">Otel Ekle </a>
                    </div>

                }
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover" >
                        <thead>
                            <tr>
                                <th></th>
                                <th>Otel Adı</th>
                                <th>Otel Yönetimi</th>
                                <th>Otel Adresi</th>
                                <th>Otel Tel</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>


                            @foreach (Oteller o in Model)
                            {
                                
                            <tr>
                                <td><img src="@o.image" alt="otelresim" style="max-width:200px"></td>


                                <td>@o.otel_adi</td>
                                @if (o.OtelYonetimi == null)
                                {
                                    <td></td>
                                }
                                else
                                {
                                    <td><span class="label label-primary">@o.OtelYonetimi.yonetim_adi</span></td>
                                }
                                <td>@o.otel_adres</td>
                                <td>@o.otel_tel</td>

                                @if (User.IsInRole("A"))
                                {
                                    <td><a href="/Oteller/OtelGuncelle/@o.otel_id" class="btn btn-fresh rounded">Güncelle</a></td>
                                    <td><a href="/Oteller/OtelSil/@o.otel_id" class="btn btn-danger rounded">Sil</a></td>
                                }
                                    <td><a href="/Odalar/Index/@o.otel_id" class="btn btn-success rounded">Oda Bul</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




