                        Kayıt Ol!
                    </button>

                    <div class="modal fade" tabindex="-1" id="loginModal"
                         data-keyboard="false" data-backdrop="static">
                       
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <p style="margin-left:auto; font-size:medium;font-weight:bold">Yeni Kullanıcı Kaydı</p>
                                    <button type="button" class="close" data-dismiss="modal">
                                        ×
                                    </button>

                                </div>
                                <div class="modal-body">
                                    <form action="/Security/SignUp" method="post" role="form">

                                        <p class="badge badge-danger"> @ViewBag.mesaj1</p>
                                        <div class="form-group">
                                            <label for="exampleInputPassword1" style="font-weight:bold">Kullanıcı Adı Girin:</label>
                                            <input class="form-control" type="text"
                                                   placeholder="Kullanıcı Adı" name="kullanici_adi" />
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPassword1" style="font-weight:bold">Şifre Girin:</label>
                                            <input class="form-control" placeholder="Şifre"
                                                   type="password" name="kullanici_sifre" />
                                        </div>

