                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-primary bg-navy " style="background-color:forestgreen; margin:auto">Kayıt Ol</button>

                                        </div>

                                    </form>
                                </div>
                               
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </fieldset>
</div>








<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquerşy.min.js">

</script>
<script src="bootstrap/js/bootstrap.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        $("#btnShowModal").click(function () {
            $("#loginModal").modal('show');
        });

        $("#btnHideModal").click(function () {
            $("#loginModal").modal('hide');
        });
    });
</script>











