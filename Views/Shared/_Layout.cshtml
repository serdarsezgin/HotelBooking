    </script>
    <link rel='stylesheet' type='text/css' media='screen' href='~/Content/style.css' />
    

</head>


<body>

    <div>

        <nav class="navbar bg-navy navbar-expand-lg  navbar-light fixed-top " style="background-color: black;">

            <div class=" container ">
                <a class="navbar-brand" href="~/Home/Index">OTEL BUL</a>
                <iframe src="http://free.timeanddate.com/clock/i7f9zxaa/n107/tltr28/fcfff/tc000/pc000/tt0/tw1/tm1" frameborder="0" width="179" height="19"></iframe>

                <button class="navbar-toggler " type="button" data-toggle="collapse " data-target="#navbarSupportedContent " aria-controls="navbarSupportedContent " aria-expanded="false " aria-label="Toggle navigation ">
                    <span class="navbar-toggler-icon "></span>
                </button>

                <div class="collapse navbar-collapse " id="navbarSupportedContent ">
                    <ul class="navbar-nav ml-auto ">

                        <li class="nav-item  ">
                            <a class="nav-link " href="~/Home/Index">Anasayfa</a>
                        </li>

                        <li class="nav-item ">
                            <a class="nav-link " href="~/Oteller/Index">Otelleri Bul</a>
                        </li>
                        @if (!User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item ">
                                <a class="nav-link " href="~/Security/Login">Giriş Yap</a>
                            </li>
                        }

                        <li class="nav-item ">
                            <a class="nav-link " href="korunma ">Diğer</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link " href="iletisim ">İletişim</a>
                        </li>

                    </ul>
                    @if (User.Identity.IsAuthenticated)

                    {

                        <p style="color:aqua; margin-top:1rem">Hoşgeldiniz: @HttpContext.Current.User.Identity.Name </p>
                        <a href="/Kullanici/Profilim" style="margin-left:0.6rem; text-decoration:underline"> Profilim</a>
                        <a href="/Security/LogOut" class="top" style="margin-left:6px;">
                            <span class="main-menu-icon">
                                <span aria-hidden="true" class="icon icon-grid-big icon-size-medium"></span>
                            </span>
                            <span class="btn btn-danger " style="resize:initial">Çıkış Yap</span>
                        </a>
                    }


                </div>
            </div>
        </nav>




    </div>


    @RenderBody()

    @RenderSection("scripts", false)
    @RenderSection("body", false)
    <footer class="footer-distributed ">

        <div class="footer-left ">

            <h3>Otel Bul<span></span></h3>

